import os

LISTA = []

## Carrega a lista do arquivo
# Abre o arquivo (se ele já existe)
if os.path.exists("crud.txt"):
    # Abre o arquivo para leitura ('r' -> read)
    file = open("crud.txt", 'r')
    # Lê o arquivo linha por linha e coloca na lista
    for item in file.readlines():
        LISTA.append(item[:-1]) # Esse [:-1] tira o último caractere, um "\n"
    # Fecha o arquivo
    file.close()
## Salva a lista no arquivo
# Abre o arquivo para escrita ('w' -> write)
file = open("crud.txt", 'w')
# Itera a lista e escreve cada item no arquivo
for item in LISTA:
    # O str() converte o item em uma string
    # O '\n' no final é uma quebra de linha, pra cada item sair numa linha
    file.write(str(item) + '\n')
# Fecha o arquivo
file.close()

modelo = "Não cadastrado"
marca = "Não cadastrado"
ano = "Não cadastrado"
placa = "Não cadastrado"
valor = "Não cadastrado"

resposta = 0
while resposta != "5":
    print("------PAINEL DE VEICULO------")
    print('-1- Adicionar')
    print('-2- Consultar')
    print('-3- Deletar')
    print('-4- Atualizar')
    print('-5- Sair')
    resposta = input("-Opção: ")
        
    if resposta == "1":
        print("\n-ADICIONAR VEICULO")
        modelo = input("-Modelo: ")
        marca = input("-Marca: ")
        ano = input("-Ano: ")
        placa = input("-Placa: ")
        valor = input("-Valor: ")
        print("\nCONFERIR DADOS")
        print("1- Modelo: ", modelo)
        print("2- Marca: ", marca)
        print("3- Ano: ", ano)
        print("4- Placa: ", placa)
        print("5- Valor: ", valor)
        print("6- Inserir dados novamente")
        resposta2 = input("CLique enter para confirmar os dados, caso contrario, forneça qual opção você deseja alterar")
        if resposta2 == "1":
            modelo = input("Modelo: ")
        if resposta2 == "2":
            marca = input("Marca: ")
        if resposta2 == "3":
            ano = input("Ano: ")
        if resposta2 == "4":
            placa = input("Placa: ")
        if resposta2 == "5":
            valor = input("Valor: ")
        if resposta2 == "6":
            modelo = input("Modelo: ")
            marca = input("Marca: ")
            ano = input("Ano: ")
            placa = input("Placa: ")
            valor = input("Valor: ")
        print("\nDados do veiculo cadastrado com sucesso\n\n")
    if resposta == "2":
        if modelo == "Não cadastrado" and marca == "Não cadastrado" and ano == "Não cadastrado" and placa == "Não cadastrado" and valor == "Não cadastrado":
            print("Nenhum dado foi cadastrado")
        else:
            print("\nCONSULTAR CADASTRO")
            print("Modelo: ", modelo)
            print("Marca: ", marca)
            print("Ano: ", ano)
            print("Placa: ", placa)
            print("Valor: ", valor)
            resposta2 = input("CLique enter para voltar ao painel principal")
    if resposta == "3":
        print("\nDELETAR DADOS")
        print("1- Modelo: ", modelo)
        print("2- Marca: ", marca)
        print("3- Ano: ", ano)
        print("4- Placa: ", placa)
        print("5- Valor: ", valor)
        print("6- Deletar todos os dados")
        resposta2 = input("Opção: ")
        if resposta2 == "1":
            modelo = "Não cadastrado"
            print("Modelo do veiculo foi deletado")
        elif resposta2 == "2":
            marca = "Não cadastrado"
            print("Marca do veiculo foi deletado")
        elif resposta2 == "3":
            ano = "Não cadastrado"
            print("Ano do veiculo foi deletado")
        elif resposta2 == "4":
            placa = "Não cadastrado"
            print("Placa do veiculo foi deletado")
        elif resposta2 == "5":
            valor = "Não cadastrado"
            print("Valor do veiculo foi deletado")
        elif resposta2 == "6":
            modelo = "Não cadastrado"
            marca = "Não cadastrado"
            ano = "Não cadastrado"
            placa = "Não cadastrado"
            valor = "Não cadastrado"
            print("Todos os dados foram deletados!")
        else:
            print("Opção inválida")
    if resposta =="4":
        if modelo == "Não cadastrado" and marca == "Não cadastrado" and ano == "Não cadastrado" and placa == "Não cadastrado" and valor == "Não cadastrado":
            print("Nenhum dado foi cadastrado")
        else:
            print("\nATUALIZAR DADOS")
            print("1- Modelo: ", modelo)
            print("2- Marca: ", marca)
            print("3- Ano: ", ano)
            print("4- Placa: ", placa)
            print("5- Valor: ", valor)
            print("6- Atualizar dados novamente")
            resposta2 = input("Opção: ")
            if resposta2 == "1":
                print("Opção inválida")
                modelo = input("Modelo: ")
                print("\nModelo do veiculo atualizado com sucesso\n\n")
            elif resposta2 == "2":
                marca = input("Marca: ")
                print("\nMarca do veiculo atualizado com sucesso\n\n")
            elif resposta2 == "3":
                ano = input("Ano: ")
                print("\nAno do veiculo atualizado com sucesso\n\n")
            elif resposta2 == "4":
                placa = input("Placa: ")
                print("\nPlaca do veiculo atualizado com sucesso\n\n")
            elif resposta2 == "5":
                valor = input("Valor: ")
                print("\nValor do veiculo atualizado com sucesso\n\n")
            elif resposta2 == "6":
                modelo = input("Modelo: ")
                marca = input("Marca: ")
                ano = input("Ano: ")
                placa = input("Placa: ")
                valor = input("Valor: ")
                print("\nDados do veiculo atualizado com sucesso\n\n")
            else:
                print("Opção inválida")
if resposta =="5":
            print("Processo encerrado")